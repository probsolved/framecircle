<div class="container py-5" style="max-width: 600px;">
  <h1 class="mb-4">Create a Group</h1>

  <%= form_with model: @group, local: true do |f| %>

  <% if @group.errors.any? %>
  <div class="alert alert-danger">
    <div class="fw-semibold mb-2">Please fix:</div>
    <ul class="mb-0">
      <% @group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <!-- Name -->
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name,
            class: "form-control",
            placeholder: "e.g., 52Frames Group 12",
            required: true %>
  </div>

  <!-- Visibility (required) -->
  <div class="mb-4">
    <div class="form-label fw-semibold">Visibility <span class="text-danger">*</span></div>

    <div class="form-check">
      <%= f.radio_button :public, true, checked: false, class: "form-check-input", id: "group_public_true" %>
      <%= f.label :public, "Public (shows up on Discover Groups)", value: true, class: "form-check-label", for: "group_public_true" %>
      <div class="form-text ms-4">
        Anyone can find and join this group.
      </div>
    </div>

    <div class="form-check mt-2">
      <%= f.radio_button :public, false, checked: false, class: "form-check-input", id: "group_public_false" %>
      <%= f.label :public, "Private (invite only)", value: false, class: "form-check-label", for: "group_public_false" %>
      <div class="form-text ms-4">
        Only people with an invite link can join.
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="d-flex gap-2">
    <%= f.submit "Create Group", class: "btn btn-primary" %>
    <%= link_to "Cancel", groups_path, class: "btn btn-outline-secondary" %>
  </div>

  <% end %>
</div>